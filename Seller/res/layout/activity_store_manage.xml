<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/store_manage_titlebar"/>

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <ImageView 
            android:id="@+id/store_manage_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/header"
            android:scaleType="fitCenter"
            android:onClick="selectImage"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="3dp"
            android:background="@color/white">
            
            <RelativeLayout
                style="@style/input_item_style">
            <TextView
                    style="@style/input_attr_style"
                    android:text="商店名称"/>
            <TextView
                    android:id="@+id/store_manage_title"
                    style="@style/attr_show_style"
                    android:text="海澜之家"/>
            <ImageView 
               style="@style/more_icon_style"/>
        </RelativeLayout>
          
        <View 
            style="@style/dividing_line_style"/>
            
        <RelativeLayout
             style="@style/input_item_style">
            <TextView
                style="@style/input_attr_style"
                android:text="店主姓名"/>
            <TextView
                    android:id="@+id/store_manage_name"
                    style="@style/attr_show_style"
                    android:text="吴牧"/>
            <ImageView 
                style="@style/more_icon_style"/>
        </RelativeLayout>
        
        <View 
            style="@style/dividing_line_style"/>
        
        <RelativeLayout
             style="@style/input_item_style">
            <TextView
                    style="@style/input_attr_style"
                    android:text="QQ号"/>
            <TextView
                    android:id="@+id/store_manage_qq"
                    style="@style/attr_show_style"
                    android:text="742518345"/>
            <ImageView 
                style="@style/more_icon_style"/>
        </RelativeLayout>
         
        <View 
            style="@style/dividing_line_style"/>
        
    <RelativeLayout
             style="@style/input_item_style">
            <TextView
                    style="@style/input_attr_style"
                    android:text="微信号"/>
            <TextView
                    android:id="@+id/store_manage_wechat"
                    style="@style/attr_show_style"
                    android:text="wmwxdh"/>
            <ImageView 
                style="@style/more_icon_style"/>
        </RelativeLayout>
       
    <View 
            style="@style/dividing_line_style"/>
    
         <RelativeLayout
             style="@style/input_item_style">
            <TextView
                    style="@style/input_attr_style"
                    android:text="电子邮箱"/>
            <TextView
                    android:id="@+id/store_manage_email"
                    style="@style/attr_show_style"
                    android:text="742518345@qq.com"/>
            <ImageView 
                style="@style/more_icon_style"/>
        </RelativeLayout>
        </LinearLayout>
         
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="3dp"
            android:background="@color/white">
            <RelativeLayout
             style="@style/input_item_style">
            <TextView
                    style="@style/input_attr_style"
                    android:text="商品展示方式"/>
            <ImageView 
                style="@style/more_icon_style"/>
        </RelativeLayout>
        
        <View 
            style="@style/dividing_line_style"/>
            
        <RelativeLayout
             style="@style/input_item_style">
            <TextView
                    style="@style/input_attr_style"
                    android:text="店铺公告"/>
            <TextView
                    android:id="@+id/store_manage_notice"
                    style="@style/attr_show_style"
                    android:singleLine="true"
                    android:maxWidth="180dp"
                    android:text="海澜之家"/>
            <ImageView 
                style="@style/more_icon_style"/>
        </RelativeLayout>
        </LinearLayout>
        
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:background="@color/white">
             <RelativeLayout
             style="@style/input_item_style">
            <TextView
                    style="@style/input_attr_style"
                    android:text="店铺地址"/>
            <TextView
                    android:id="@+id/store_manage_address"
                    style="@style/attr_show_style"
                    android:singleLine="true"
                    android:maxWidth="180dp"
                    android:text="重庆观音桥步行街9号附10号"/>
            <ImageView 
                style="@style/more_icon_style"/>
        </RelativeLayout>
        
             <View 
            style="@style/dividing_line_style"/>
             
        <RelativeLayout
             style="@style/input_item_style">
            <TextView
                    style="@style/input_attr_style"
                    android:text="客服电话"/>
            <TextView
                    android:id="@+id/store_manage_phone"
                    style="@style/attr_show_style"
                    android:text="18223022677"/>
            <ImageView 
                style="@style/more_icon_style"/>
        </RelativeLayout>
        <View 
            style="@style/dividing_line_style"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <LinearLayout 
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:orientation="vertical">
                 <ImageView 
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/preview"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="预览"
                    android:textColor="@color/gray"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <View 
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>
            <LinearLayout 
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:orientation="vertical">
                 <ImageView 
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/share"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="分享"
                    android:textColor="@color/gray"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
         </LinearLayout>
        
        
    </LinearLayout>
    </ScrollView>
</LinearLayout>
