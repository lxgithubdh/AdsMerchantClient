<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!--标题栏样式 -->
    <style name="title_bg_style" parent="AppTheme">
        <item name="android:background">@color/title_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MyAppTheme" parent="android:Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!-- 标题栏标题样式 -->
    <style name="title_text_style">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <!-- 标题栏按钮样式 -->
    <style name="title_button_style">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
    </style>
    
    
    <!-- 输入信息Item样式 -->
    <style name="input_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    
    <!-- 分割线样式 -->
    <style name="dividing_line_style">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
    
    
    <!-- 更多图标样式 -->
    <style name="more_icon_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/more_icon</item>
    </style>
    
    
    <!-- 输入属性样式 -->
    <style name="input_attr_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- 输入属性显示样式 -->
    <style name="attr_show_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>